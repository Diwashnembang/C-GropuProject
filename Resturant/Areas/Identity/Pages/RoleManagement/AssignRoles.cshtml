@page
@model Resturant.Areas.Identity.Pages.RoleManagement.AssignRolesModel
@{
    ViewData["Title"] = "Assign Roles to Users";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="SelectedUserId">Select User</label>
                <select asp-for="SelectedUserId" class="form-control" asp-items="Model.Users"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRoleId">Select Role</label>
                <select asp-for="SelectedRoleId" class="form-control" asp-items="Model.Roles"></select>
            </div>
            <button type="submit" class="btn btn-primary">Assign Role</button>
        </form>
    </div>
</div>
